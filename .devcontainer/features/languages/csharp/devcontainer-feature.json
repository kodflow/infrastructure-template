{
  "id": "csharp",
  "version": "1.0.0",
  "name": "C# / .NET Development Environment",
  "description": "Installs .NET SDK with common C# development tools",
  "options": {
    "version": {
      "type": "string",
      "default": "latest",
      "description": ".NET SDK version to install"
    }
  },
  "containerEnv": {
    "DOTNET_ROOT": "/usr/share/dotnet",
    "PATH": "/usr/share/dotnet:/home/vscode/.dotnet/tools:${PATH}"
  },
  "installsAfter": []
}
